{{#>body}}
<p class="large">
  {{header}}
  <form name="myForm" ng-controller="form_controller" class="my-form" ng-submit="submit()">
    First Name: <input name="input" ng-model="user.first" required>
    <code>First Name = \{{user.first}}</code><br>

    Last Name: <input name="input" ng-model="user.last" required>
    <code>Last Name = \{{user.last}}</code><br>

    Email: <input name="input" ng-model="user.email" required>
    <code>Email = \{{user.email}}</code><br>

    Username: <input name="input" ng-model="user.username" required>
    <code>Username = \{{user.username}}</code><br>

    <code>myForm.input.$valid = \{{myForm.input.$valid}}</code><br>
    <code>myForm.input.$error = \{{myForm.input.$error}}</code><br>
    <code>myForm.$valid = \{{myForm.$valid}}</code><br>
    <code>myForm.$error.required = \{{!!myForm.$error.required}}</code><br>

    <input type="submit" id="submit" value="Sign Up"></input>
  </form>
</p>
{{/body}}
