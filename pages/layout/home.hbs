    {{#with brand}}

          <section class="screen" style = 'background-image: url({{link}})' >
            <div class="centered_div">
              <h1 style="font-family: 'Comic Sans MS', cursive, sans-serif; color: black; font-size:100px;" >{{title}} </h1>
					    <p style = "color: #32BD56;"><b>{{tagline1}}</b></p>
            </div>

            <div>
            <p style = "color: red;float:right;">{{tagline2}}</p>
          </div>

      </section>
    {{/with}}

    {{#with mission}}
      <section class="screen" style = 'background-image: url({{link}})'>
        <div class="centered_div">
          <h1 style = "font-family: 'Comic Sans MS', cursive, sans-serif; color: black; font-size:100px;" >{{header}} </h1>
					<p>{{tagline1}}</p>
          </div>
      </section>
    {{/with}}

    {{#with explanation}}
