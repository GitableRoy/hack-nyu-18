{{#>body}}

  <style>
  .centered_div {
     width: Xu;
     height: Yu;
     position: absolute;
     top: 35%;
     left: 35%;
     margin-left: -(X/2)u;
     margin-top: -(Y/2)u;
  }

  .centerTitle {
      margin: auto;
      width: 20%;
      padding: 10px;
  }
  .centerTag {
    margin: auto;
    width: 25%;
    padding: 10px;
}


